<Window x:Class="PcOptimizationTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:PcOptimizationTool"
        mc:Ignorable="d"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Harris Tweaks"
        Height="680" Width="940"
        MinHeight="560" MinWidth="780"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Dark-theme palette -->
        <SolidColorBrush x:Key="CardBorderBrush"    Color="#44FFFFFF"/>
        <SolidColorBrush x:Key="CardHeaderBrush"    Color="#22FFFFFF"/>
        <SolidColorBrush x:Key="SeparatorBrush"     Color="#33FFFFFF"/>
        <SolidColorBrush x:Key="StatusBarBrush"     Color="#1AFFFFFF"/>
        <SolidColorBrush x:Key="AccentBrush"        Color="#FF0078D4"/>

        <!-- Removes default ListViewItem chrome so checkboxes render cleanly -->
        <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="12,5"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ── Title ──────────────────────────────────────────── -->
        <StackPanel Grid.Row="0" Margin="0,28,0,20">
            <TextBlock Text="Harris Tweaks"
                       HorizontalAlignment="Center"
                       FontSize="26" FontWeight="Bold"/>
            <Rectangle Height="1"
                       Margin="30,10,30,0"
                       Fill="{StaticResource SeparatorBrush}"/>
        </StackPanel>

        <!-- ── Two columns ────────────────────────────────────── -->
        <Grid Grid.Row="1" Margin="20,0,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="14"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Registry & Script tweaks -->
            <Border Grid.Column="0"
                    BorderThickness="1"
                    BorderBrush="{StaticResource CardBorderBrush}"
                    CornerRadius="8">
                <DockPanel>
                    <Border DockPanel.Dock="Top"
                            Background="{StaticResource CardHeaderBrush}"
                            CornerRadius="7,7,0,0"
                            Padding="16,10">
                        <TextBlock Text="Gaming Tweaks"
                                   FontWeight="SemiBold"
                                   FontSize="13"/>
                    </Border>

                    <ListView ItemsSource="{Binding SystemTweaks}"
                              BorderThickness="0"
                              Background="Transparent"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                          VerticalAlignment="Top">
                                    <StackPanel Margin="4,0,0,0">
                                        <TextBlock Text="{Binding Name}"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Description}"
                                                   FontSize="11"
                                                   Opacity="0.55"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </CheckBox>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DockPanel>
            </Border>

            <!-- Right: Service & Windows tweaks -->
            <Border Grid.Column="2"
                    BorderThickness="1"
                    BorderBrush="{StaticResource CardBorderBrush}"
                    CornerRadius="8">
                <DockPanel>
                    <Border DockPanel.Dock="Top"
                            Background="{StaticResource CardHeaderBrush}"
                            CornerRadius="7,7,0,0"
                            Padding="16,10">
                        <TextBlock Text="Windows Tweaks"
                                   FontWeight="SemiBold"
                                   FontSize="13"/>
                    </Border>

                    <ListView ItemsSource="{Binding ServiceTweaks}"
                              BorderThickness="0"
                              Background="Transparent"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                          VerticalAlignment="Top">
                                    <StackPanel Margin="4,0,0,0">
                                        <TextBlock Text="{Binding Name}"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Description}"
                                                   FontSize="11"
                                                   Opacity="0.55"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </CheckBox>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DockPanel>
            </Border>
        </Grid>

        <!-- ── Buttons ────────────────────────────────────────── -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,18,0,18">
            <Button Content="Apply Tweaks"
                    Command="{Binding ApplySelectedTweaksCommand}"
                    Background="{StaticResource AccentBrush}"
                    Foreground="White"
                    BorderBrush="Transparent"
                    MinWidth="145" Padding="16,8"
                    Margin="0,0,10,0"/>
            <Button Content="Undo Tweaks"
                    Command="{Binding UndoSelectedTweaksCommand}"
                    MinWidth="145" Padding="16,8"
                    Margin="0,0,10,0"/>
            <Button Content="Undo Last Changes"
                    Command="{Binding UndoLastChangesCommand}"
                    MinWidth="160" Padding="16,8"/>
        </StackPanel>

        <!-- ── Status bar ─────────────────────────────────────── -->
        <Border Grid.Row="3"
                Background="{StaticResource StatusBarBrush}"
                BorderThickness="0,1,0,0"
                BorderBrush="{StaticResource CardBorderBrush}"
                Padding="16,7">
            <DockPanel>
                <ProgressBar DockPanel.Dock="Right"
                             IsIndeterminate="True"
                             Width="110" Height="4"
                             VerticalAlignment="Center"
                             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"/>
                <TextBox Text="{Binding StatusMessage, Mode=OneWay}"
                         VerticalAlignment="Center"
                         FontSize="12"
                         Opacity="0.7"
                         IsReadOnly="True"
                         BorderThickness="0"
                         Background="Transparent"
                         IsTabStop="False"
                         TextWrapping="NoWrap"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>

