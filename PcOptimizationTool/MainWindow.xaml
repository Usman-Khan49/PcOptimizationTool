<Window x:Class="PcOptimizationTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:PcOptimizationTool"
        mc:Ignorable="d"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Harris Tweaks"
        Height="680" Width="940"
        MinHeight="560" MinWidth="780"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Dark-theme palette -->
        <SolidColorBrush x:Key="CardBorderBrush"    Color="#44FFFFFF"/>
        <SolidColorBrush x:Key="CardHeaderBrush"    Color="#22FFFFFF"/>
        <SolidColorBrush x:Key="SeparatorBrush"     Color="#33FFFFFF"/>
        <SolidColorBrush x:Key="StatusBarBrush"     Color="#1AFFFFFF"/>
        <SolidColorBrush x:Key="AccentBrush"        Color="#FF0078D4"/>

        <!-- Tiny All/None buttons used in each panel header -->
        <Style x:Key="HeaderMiniButton" TargetType="Button">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Padding" Value="7,2"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Removes default ListViewItem chrome so checkboxes render cleanly -->
        <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="12,5"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ── Title ──────────────────────────────────────────── -->
        <StackPanel Grid.Row="0" Margin="0,28,0,20">
            <TextBlock Text="Harris Tweaks"
                       HorizontalAlignment="Center"
                       FontSize="26" FontWeight="Bold"/>
            <Rectangle Height="1"
                       Margin="30,10,30,0"
                       Fill="{StaticResource SeparatorBrush}"/>
        </StackPanel>

        <!-- ── Two columns ────────────────────────────────────── -->
        <Grid Grid.Row="1" Margin="20,0,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="14"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Registry & Script tweaks -->
            <Border Grid.Column="0"
                    BorderThickness="1"
                    BorderBrush="{StaticResource CardBorderBrush}"
                    CornerRadius="8">
                <DockPanel>
                    <Border DockPanel.Dock="Top"
                            Background="{StaticResource CardHeaderBrush}"
                            CornerRadius="7,7,0,0"
                            Padding="12,8">
                        <DockPanel>
                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                                <Button Content="All"
                                        Style="{StaticResource HeaderMiniButton}"
                                        Command="{Binding SelectAllSystemCommand}"
                                        Margin="0,0,4,0"/>
                                <Button Content="None"
                                        Style="{StaticResource HeaderMiniButton}"
                                        Command="{Binding DeselectAllSystemCommand}"/>
                            </StackPanel>
                            <TextBlock Text="Big Boy Tweaks"
                                       FontWeight="SemiBold"
                                       FontSize="13"
                                       VerticalAlignment="Center"/>
                        </DockPanel>
                    </Border>

                    <ListView ItemsSource="{Binding SystemTweaks}"
                              BorderThickness="0"
                              Background="Transparent"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                          VerticalAlignment="Center"
                                          Margin="0,2">
                                    <StackPanel Orientation="Horizontal" Margin="4,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"/>
                                        <Border Width="15" Height="15"
                                                CornerRadius="8"
                                                Background="#33FFFFFF"
                                                Margin="6,0,0,0"
                                                VerticalAlignment="Center"
                                                Cursor="Help"
                                                ToolTip="{Binding Description}"
                                                ToolTipService.InitialShowDelay="300"
                                                ToolTipService.ShowDuration="10000">
                                            <TextBlock Text="?"
                                                       FontSize="9"
                                                       FontWeight="Bold"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Opacity="0.75"/>
                                        </Border>
                                    </StackPanel>
                                </CheckBox>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DockPanel>
            </Border>

            <!-- Right: Secret Sauce (top) + Windows Tweaks (bottom) -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="14"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Top: Secret Sauce -->
                <Border Grid.Row="0"
                        BorderThickness="1"
                        BorderBrush="{StaticResource CardBorderBrush}"
                        CornerRadius="8">
                    <DockPanel>
                        <Border DockPanel.Dock="Top"
                                Background="{StaticResource CardHeaderBrush}"
                                CornerRadius="7,7,0,0"
                                Padding="12,8">
                            <DockPanel>
                                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                                    <Button Content="All"
                                            Style="{StaticResource HeaderMiniButton}"
                                            Command="{Binding SelectAllSecretSauceCommand}"
                                            Margin="0,0,4,0"/>
                                    <Button Content="None"
                                            Style="{StaticResource HeaderMiniButton}"
                                            Command="{Binding DeselectAllSecretSauceCommand}"/>
                                </StackPanel>
                                <TextBlock Text="Secret Sauce"
                                           FontWeight="SemiBold"
                                           FontSize="13"
                                           VerticalAlignment="Center"/>
                            </DockPanel>
                        </Border>

                        <ListView ItemsSource="{Binding SecretSauceTweaks}"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                              VerticalAlignment="Top"
                                              Margin="0,2">
                                        <StackPanel Margin="4,0,0,0">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}"
                                                           FontWeight="SemiBold"
                                                           VerticalAlignment="Center"/>
                                                <Border Width="15" Height="15"
                                                        CornerRadius="8"
                                                        Background="#33FFFFFF"
                                                        Margin="6,0,0,0"
                                                        VerticalAlignment="Center"
                                                        Cursor="Help"
                                                        ToolTip="{Binding Description}"
                                                        ToolTipService.InitialShowDelay="300"
                                                        ToolTipService.ShowDuration="10000">
                                                    <TextBlock Text="?"
                                                               FontSize="9"
                                                               FontWeight="Bold"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               Opacity="0.75"/>
                                                </Border>
                                            </StackPanel>
                                            <ComboBox ItemsSource="{Binding Options}"
                                                      SelectedItem="{Binding SelectedOption, Mode=TwoWay}"
                                                      DisplayMemberPath="Label"
                                                      MinWidth="200"
                                                      Margin="0,6,0,2"
                                                      Visibility="{Binding IsChoiceTweak, Converter={StaticResource BoolToVis}}"/>
                                        </StackPanel>
                                    </CheckBox>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </DockPanel>
                </Border>

                <!-- Bottom: Windows Tweaks -->
                <Border Grid.Row="2"
                        BorderThickness="1"
                        BorderBrush="{StaticResource CardBorderBrush}"
                        CornerRadius="8">
                    <DockPanel>
                        <Border DockPanel.Dock="Top"
                                Background="{StaticResource CardHeaderBrush}"
                                CornerRadius="7,7,0,0"
                                Padding="12,8">
                            <DockPanel>
                                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                                    <Button Content="All"
                                            Style="{StaticResource HeaderMiniButton}"
                                            Command="{Binding SelectAllServiceCommand}"
                                            Margin="0,0,4,0"/>
                                    <Button Content="None"
                                            Style="{StaticResource HeaderMiniButton}"
                                            Command="{Binding DeselectAllServiceCommand}"/>
                                </StackPanel>
                                <TextBlock Text="Windows Tweaks"
                                           FontWeight="SemiBold"
                                           FontSize="13"
                                           VerticalAlignment="Center"/>
                            </DockPanel>
                        </Border>

                        <ListView ItemsSource="{Binding ServiceTweaks}"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                                          VerticalAlignment="Center"
                                                          Margin="0,2">
                                                    <StackPanel Orientation="Horizontal" Margin="4,0,0,0" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Name}"
                                                                   FontWeight="SemiBold"
                                                                   VerticalAlignment="Center"/>
                                                        <Border Width="15" Height="15"
                                                                CornerRadius="8"
                                                                Background="#33FFFFFF"
                                                                Margin="6,0,0,0"
                                                                VerticalAlignment="Center"
                                                                Cursor="Help"
                                                                ToolTip="{Binding Description}"
                                                                ToolTipService.InitialShowDelay="300"
                                                                ToolTipService.ShowDuration="10000">
                                                            <TextBlock Text="?"
                                                                       FontSize="9"
                                                                       FontWeight="Bold"
                                                                       HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center"
                                                                       Opacity="0.75"/>
                                                        </Border>
                                                    </StackPanel>
                                                </CheckBox>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </DockPanel>
                            </Border>
                            </Grid>
        </Grid>

        <!-- ── Buttons ────────────────────────────────────────── -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,18,0,18">
            <Button Content="Apply Tweaks"
                    Command="{Binding ApplySelectedTweaksCommand}"
                    Background="{StaticResource AccentBrush}"
                    Foreground="White"
                    BorderBrush="Transparent"
                    MinWidth="145" Padding="16,8"
                    Margin="0,0,10,0"/>
            <Button Content="Undo Tweaks"
                    Command="{Binding UndoSelectedTweaksCommand}"
                    MinWidth="145" Padding="16,8"
                    Margin="0,0,10,0"/>
            <Button Content="Undo Last Changes"
                    Command="{Binding UndoLastChangesCommand}"
                    MinWidth="160" Padding="16,8"/>
        </StackPanel>

        <!-- ── Status bar ─────────────────────────────────────── -->
        <Border Grid.Row="3"
                Background="{StaticResource StatusBarBrush}"
                BorderThickness="0,1,0,0"
                BorderBrush="{StaticResource CardBorderBrush}"
                Padding="16,7">
            <DockPanel>
                <ProgressBar DockPanel.Dock="Right"
                             IsIndeterminate="True"
                             Width="110" Height="4"
                             VerticalAlignment="Center"
                             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"/>
                <TextBox Text="{Binding StatusMessage, Mode=OneWay}"
                         VerticalAlignment="Center"
                         FontSize="12"
                         Opacity="0.7"
                         IsReadOnly="True"
                         BorderThickness="0"
                         Background="Transparent"
                         IsTabStop="False"
                         TextWrapping="NoWrap"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>

