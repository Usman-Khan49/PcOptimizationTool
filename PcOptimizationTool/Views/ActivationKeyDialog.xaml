<Window x:Class="PcOptimizationTool.Views.ActivationKeyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Harris Tweaks â€” Activation"
        Width="420" Height="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None"
        Background="White">
    <Window.Resources>
        <FontFamily x:Key="PixelFont">pack://application:,,,/Fonts/#Press Start 2P</FontFamily>
        <FontFamily x:Key="SilkscreenFont">pack://application:,,,/Fonts/#Silkscreen</FontFamily>
        <FontFamily x:Key="VT323Font">pack://application:,,,/Fonts/#VT323</FontFamily>
    </Window.Resources>

    <Grid Background="White" MouseLeftButtonDown="Window_MouseLeftButtonDown">

        <!-- â”€â”€ Corner pixel squares â”€â”€ -->
        <Rectangle Width="10" Height="10" Fill="#1A1A1A"
                   HorizontalAlignment="Left"  VerticalAlignment="Top"/>
        <Rectangle Width="10" Height="10" Fill="#1A1A1A"
                   HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <Rectangle Width="10" Height="10" Fill="#1A1A1A"
                   HorizontalAlignment="Left"  VerticalAlignment="Bottom"/>
        <Rectangle Width="10" Height="10" Fill="#1A1A1A"
                   HorizontalAlignment="Right" VerticalAlignment="Bottom"/>

        <!-- â”€â”€ X close button â”€â”€ -->
        <Button HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="0,18,20,0" Cursor="Hand"
                Click="CancelButton_Click" RenderTransformOrigin="1,1">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="1.79"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <TextBlock Text="X"
                               FontFamily="{StaticResource PixelFont}" FontSize="9"
                               Foreground="#1A1A1A"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- â”€â”€ Main content â”€â”€ -->
        <StackPanel Margin="36,28,36,36" VerticalAlignment="Center">

            <!-- Shield icon in circle -->
            <Border Width="62" Height="62" CornerRadius="31"
                    BorderBrush="#9333EA" BorderThickness="2"
                    Background="Transparent"
                    HorizontalAlignment="Center" Margin="0,0,0,16">
                <Canvas Width="34" Height="34"
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Path Data="M 17,1 L 30,6 L 30,17 C 30,24 24,28.5 17,31 C 10,28.5 4,24 4,17 L 4,6 Z"
                          Stroke="#9333EA" StrokeThickness="2"
                          Fill="Transparent" StrokeLineJoin="Round"/>
                    <Path Data="M 10,17 L 14.5,22 L 24,12"
                          Stroke="#9333EA" StrokeThickness="2.2"
                          StrokeStartLineCap="Round" StrokeEndLineCap="Round"
                          StrokeLineJoin="Round"/>
                </Canvas>
            </Border>

            <!-- Title -->
            <TextBlock Text="ACTIVATE PREMIUM"
                       FontFamily="{StaticResource PixelFont}"
                       FontSize="11" FontWeight="Bold"
                       Foreground="#1A1A1A"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap" TextAlignment="Center"
                       Margin="0,0,0,10"/>

            <!-- Description with Discord link -->
            <TextBlock FontFamily="{StaticResource VT323Font}"
                       FontSize="15" Foreground="#888888"
                       HorizontalAlignment="Center"
                       TextAlignment="Center" TextWrapping="Wrap"
                       Margin="0,0,0,16">
                <Run Text="To get the activation key, please visit our&#x0a;Discord: "/>
                <Hyperlink Foreground="#9333EA" TextDecorations="Underline"
                           RequestNavigate="Hyperlink_RequestNavigate"
                           NavigateUri="https://harris.tweaks/discord">harris.tweaks/discord</Hyperlink>
            </TextBlock>

            <!-- Key input -->
            <Border BorderBrush="#1A1A1A" BorderThickness="1.5,1.5,3,3"
                    Background="#F6F6F6" Margin="0,0,0,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="ðŸ”‘"
                               FontSize="15" Foreground="#AAAAAA"
                               VerticalAlignment="Center" Margin="14,0,4,0"/>
                    <TextBox x:Name="KeyTextBox" Grid.Column="1"
                             FontFamily="{StaticResource VT323Font}" FontSize="13"
                             Padding="4,14,14,14"
                             BorderThickness="0" Background="Transparent"
                             MaxLength="400"
                             AcceptsReturn="False"
                             TextWrapping="NoWrap"
                             VerticalContentAlignment="Center"
                             TextChanged="KeyTextBox_TextChanged"/>
                    <TextBlock x:Name="PlaceholderText" Grid.Column="1"
                               Text="ENTER KEY HERE"
                               FontFamily="{StaticResource VT323Font}" FontSize="17"
                               Foreground="#BBBBBB" Margin="4,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"/>
                </Grid>
            </Border>

            <!-- Status text -->
            <TextBlock x:Name="StatusText"
                       FontFamily="{StaticResource SilkscreenFont}" FontSize="7"
                       Foreground="#777777" TextWrapping="Wrap"
                       Margin="0,0,0,10" MinHeight="14"/>

            <!-- Activate button -->
            <Button x:Name="ActivateButton" Click="ActivateButton_Click" Cursor="Hand" Width="348">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="#7C3AED" Padding="0,16">
                            <TextBlock Text="ACTIVATE"
                                       HorizontalAlignment="Center"
                                       FontFamily="{StaticResource PixelFont}"
                                       FontSize="10" FontWeight="Bold"
                                       Foreground="White"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#6B21A8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </StackPanel>
    </Grid>
</Window>
