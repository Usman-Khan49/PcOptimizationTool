<Window x:Class="PcOptimizationTool.Views.RestorePointDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create System Restore Point"
        Width="460" Height="230"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Create System Restore Point"
                   FontSize="15" FontWeight="Bold"
                   Margin="0,0,0,8"/>

        <TextBlock Grid.Row="1"
                   Text="A restore point lets you undo system changes if something goes wrong."
                   TextWrapping="Wrap"
                   Foreground="Gray"
                   Margin="0,0,0,14"/>

        <DockPanel Grid.Row="2">
            <TextBlock Text="Description:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="DescriptionTextBox"
                     Text="PC Optimization Tool - Before Tweaks"/>
        </DockPanel>

        <TextBlock x:Name="StatusText"
                   Grid.Row="3"
                   TextWrapping="Wrap"
                   VerticalAlignment="Bottom"
                   Margin="0,8,0,0"
                   Foreground="Gray"/>

        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button x:Name="CreateButton"
                    Content="Create Restore Point"
                    MinWidth="150"
                    Padding="10,4"
                    Margin="0,0,8,0"
                    Click="CreateButton_Click"/>
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    MinWidth="75"
                    Padding="10,4"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
